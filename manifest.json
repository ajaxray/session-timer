{
  "manifest_version": 2,
  "name": "Session Timer",
  "description": "Timer and notifier for time killing web sites.",
  "icons": {
    "128": "img/timer.png"
  },
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "img/timer.png",
    "default_popup": "popup.html",
    "default_title": "Session Timer"
  },
  "background": {
    "scripts": [
      "javascript/common.js",
      "javascript/background.js"
    ],
    "persistent": true
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms",
    "notifications",
    "http://ajaxray.com/"
  ]
}